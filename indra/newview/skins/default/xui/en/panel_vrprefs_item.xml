<?xml version="1.0" encoding="UTF-8"?>
<!-- one item in the list of quick preferences -->
<layout_panel name="option_layout_panel" layout="topleft" follows="all" height="32">
   <!-- border parameters decide how the selection looks while editing -->
   <panel follows="all" layout="topleft" name="option_ordering_panel" border="true" border_thickness="2" bevel_style="bright" highlight_light_color="EmphasisColor" left="0" top="0" right="-1" height="32">
      <layout_stack follows="all" layout="topleft" name="option_inner_stack" left="4" top="0" right="-3" height="32" border_size="0" orientation="horizontal">
         <layout_panel name="option_panel_updown" layout="topleft" follows="all" visibility_control="VRPrefsEditMode" auto_resize="false" width="20">
            <button layout="topleft" follows="right|top" name="remove_button" tool_tip="Remove this control" label="" image_unselected="TrashItem_Off" image_selected="TrashItem_Press" image_pressed="TrashItem_Press" left="0" width="16" top="2" height="16" />
         </layout_panel>
         <layout_panel name="text_panel" layout="topleft" follows="all" auto_resize="true" width="115">
            <text name="option_label" layout="topleft" follows="left|top" left="0" top="8" right="-1" height="28">Control Label:</text>
         </layout_panel>
         <layout_panel name="option_panel" layout="topleft" follows="all" min_width="50" auto_resize="false" width="135">
            <!-- one of these controls will be chosen by the user, all others remain hidden -->
            <check_box name="option_checkbox_control" layout="topleft" follows="left|right|top" left="0" top="-7" height="20" right="-1" visible="false" label="" />
            <line_editor name="option_text_control" layout="topleft" follows="left|right|top" left="0" top="6" height="16" right="-1" visible="false" />
            <spinner name="option_spinner_control" layout="topleft" follows="left|right|top" left="0" top="-6" height="16" right="-1" visible="false" label="" />
            <slider name="option_slider_control" layout="topleft" follows="left|right|top" can_edit_text="true" left="0" top="6" height="16" right="-1" visible="false" label="" />
            <radio_group name="option_radio_control" layout="topleft" follows="left|right|top" left="20" top="10" height="16" right="-1" visible="false" label="">
               <radio_item name="on" width="60" layout="topleft" follows="left|top" label="On" value="1" />
               <radio_item name="off" width="60" layout="topleft" follows="right|top" left_pad="10" label="Off" value="0" />
            </radio_group>
            <color_swatch name="option_color3_control" layout="topleft" follows="left|right|top" left="10" top="6" height="18" width="60" visible="false" can_apply_immediately="true" label_height="0" label="" />
            <color_swatch name="option_color4_control" layout="topleft" follows="left|right|top" left="10" top="6" height="18" width="60" visible="false" can_apply_immediately="true" label_height="0" label="" />
            <spinner name="option_color_alpha_control" layout="topleft" follows="left|right|top" left_pad="6" top_delta="-4" height="16" right="-1" min_val="0" max_val="1" increment="0.005" visible="false" label="" />

            <line_editor name="option_vr_text_control" layout="topleft" follows="left|right|top" left="0" top="6" height="22" right="-1" visible="false" font="SansSerifMediumBold" />
            <button name="option_vr_checkbox_control" layout="topleft" follows="left|right|top" top="5" right="-1" width="26" height="26" visible="false" is_toggle="true"
              label="☐" label_selected="☑"
              image_unselected="transparent.j2c" image_selected="transparent.j2c" 
              label_color="1 1 1 .25" hover_glow_amount=".5"
              label_color_selected="white" font="SansSerifHuge" />
            <button name="option_vr_button_control" layout="topleft" follows="left|right|top" top="5" right="-1" width="26" height="26" visible="false" is_toggle="true"
              label="" label_selected="" image_color=".5 .5 1 1" label_color=".5 .5 1 .1" hover_glow_amount=".5"
              label_color_selected="white" font="SansSerifHuge" />
            <vr_spinner dynamic_button_height="true" height="30" font="SansSerifBold" name="option_vr_spinner_control" layout="topleft" follows="left|right|top" left="-90" top="-8" right="-1" visible="false" label="" />
            <vr_slider name="option_vr_slider_control" layout="topleft" follows="left|right|top" can_edit_text="true" left="0" top="6" height="16" right="-1" visible="false" label="" />
            <!--vr_slider name="option_vr_slider_control" layout="topleft" follows="left|right|top" can_edit_text="true" left="0" top="2" height="20" right="-1" visible="false" label="" /-->
            <radio_group name="option_vr_radio_control" layout="topleft" follows="left|right|top" left="20" top="10" height="28" right="-1" visible="false" label="">
               <radio_item name="on" width="60" layout="topleft" follows="left|top" label="On" value="1" />
               <radio_item name="off" width="60" layout="topleft" follows="right|top" left_pad="10" label="Off" value="0" />
            </radio_group>
            <text name="option_vr_label_control" layout="topleft" follows="left|top" left="0" top="6" right="-1" height="28" />
            <!-- one of these controls will be chosen by the user, all others remain hidden -->
         </layout_panel>
      </layout_stack>
      <view_border layout="topleft" follows="left|right|bottom" top="1" left="3" height="1" right="-3" 
          border_thickness="1" shadow_light_color="0 0 0 0" shadow_dark_color="0 0 0 0" 
          highlight_light_color="1 1 1 .025" highlight_dark_color="1 1 1 0"/>
   </panel>
</layout_panel>